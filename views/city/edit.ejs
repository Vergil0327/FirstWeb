<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center; font-weight: 700;">Edit <%= city.name %></h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/city/<%= city._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="city[name]" value="<%=city.name%>">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="city[image]" value="<%=city.image%>" placeholder="Image url">	
				</div>
				<div class="form-group">
					<textarea class="form-control" rows="4" type="text" name="city[description]"><%=city.description%></textarea>	
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>	
				</div>
			</form>
			<a href="/city">Back to cities page</a>
		</div>
		
	</div>
</div>

<% include ../partials/footer %>
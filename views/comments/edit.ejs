<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center; font-weight: 700;">Edit Comment</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/city/<%= city_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label>User: <%= comment.author.username %></label>
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>	
				</div>
			</form>
			<a href="/city">Back to cities page</a>
		</div>
		
	</div>
</div>

<% include ../partials/footer %>
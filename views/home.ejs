<% include ./partials/homeHeader %>

<div class="container">
	<div class="row">
		<div class="col-3">
			<ul class="tag">
			<strong><h3>Tag List</h3></strong>
			<% posts.forEach(function(post){ %>	
				<% if(post.tag === "Type_1"){ %>
					<li><%= post.tag %></li>
					<ul>
						<li><a href=""><%= post.tag%></a></li>
					</ul>
				<% } else if(post.tag ==="Type_2"){ %>
					<li><%= post.tag %></li>
					<ul>
						<li><a href=""><%= post.tag%></a></li>
					</ul>
				<% } else { %>
					<li><%= post.tag %></li>
					<ul>
						<li><a href=""><%= post.tag%></a></li>
					</ul>
				<% } %>	
			<%	})  %> 
			</ul>

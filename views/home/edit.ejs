<% include ../partials/homeHeader %>

<div class="container">
		<form class="form-group col-12" action="/homepage/<%= post._id %>?_method=PUT" method="POST">
			<div class="form-item">
				<h1>Edit your Article</h1>
				<h3>Title</h3>
				<input type="text" name="post[title]" value="<%=post.title%>">
			</div>
			<div class="form-item">
				<h3>Tag</h3>
				<input type="text" name="post[tag]" value="<%=post.tag%>">
			</div>
			<div class="form-item">
				<h3>Content</h3>
				<textarea id="textarea" name="post[text]"  rows="10"><%=post.text%></textarea>
			</div>
			<button onclick="history.back()">Cancel</button>
			<button>Submit</button>
			<!-- <input type="button" value="Cancel" onclick="history.back()"> -->
		</form>

</div>


<% include ../partials/homeFooter %>
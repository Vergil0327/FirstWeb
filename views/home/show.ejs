<% include ../partials/homeHeader %>

<div id="showPage" class="container">
	<div id="showPage" class="article">
		<% if(currentUser){ %>
		<div id="modification">
			<form action="/homepage/<%= post._id %>?_method=DELETE" method="POST" >
				<button id="danger">Delete</button>
			</form>
			<a id="edit" href="/homepage/<%= post._id %>/edit">Edit</a>
		</div>
		<% } %>
		<div class="article_head">
			<h2><%= post.title %></h2>
			<h3><%= post.createdAt.toLocaleString() %></h3>
		</div>
		<p><%= post.text %></p>
		<h3 class="signature">written by Vergil </h3>
	</div>
</div>

<script type="text/javascript" src="/scripts/index.js"></script>
<% include ../partials/homeFooter %>